el>\n            <input v-model=\"bookmark.tags\" type=\"text\" id=\"tags\" />\n          </div>\n          <div class=\"form-group\">\n            <label for=\"category\">Category</label>\n            <select v-model=\"bookmark.category\" id=\"category\">\n              <option value=\"\">Select Category</option>\n              <option value=\"Work\">Work</option>\n              <option value=\"Personal\">Personal</option>\n              <option value=\"Other\">Other</option>\n            </select>\n          </div>\n          <div class=\"button-group\">\n            <button type=\"submit\" class=\"add-button\">Add</button>\n            <button @click.prevent=\"saveBookmark\" class=\"save-button\">Save</button>\n          </div>\n        </form>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      showForm: false, // Controls form visibility\n      bookmark: {\n        title: '',\n        url: '',\n        tags: '',\n        category: '',\n      },\n    };\n  },\n  methods: {\n    toggleForm() {\n      this.showForm = !this.showForm; // Toggle form visibility\n    },\n    submitBookmark() {\n      this.$emit('create-bookmark', this.bookmark);\n      this.clearForm();\n      this.showForm = false; // Hide form after submission\n    },\n    saveBookmark() {\n      this.$emit('create-bookmark', this.bookmark);\n      this.clearForm();\n      this.showForm = false; // Hide form after saving\n    },\n    clearForm() {\n      this.bookmark = { title: '', url: '', tags: '', category: '' };\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* App Container */\n.app-container {\n  max-width: 600px;\n  margin: auto;\n  text-align: center;\n}\n\n/* Header with \"+\" Button (No Text) */\n.app-header {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  padding: 15px;\n  background: #0070f3;\n  border-radius: 12px;\n}\n\n/* \"+\" Button */\n.toggle-button {\n  background: white;\n  color: #0070f3;\n  font-size: 20px;\n  width: 40px;\n  height: 40px;\n  border-radius: 50%;\n  border: none;\n  cursor: pointer;\n  transition: 0.3s;\n}\n\n.toggle-button:hover {\n  background: #e0e0e0;\n}\n\n/* Form Container */\n.bookmark-form-container {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  height: auto;\n  padding: 20px;\n  margin-top: 20px;\n}\n\n/* Form Box */\n.bookmark-form {\n  background: rgba(255, 255, 255, 0.15);\n  padding: 30px;\n  border-radius: 12px;\n  backdrop-filter: blur(10px);\n  color: black;\n  width: 100%;\n  max-width: 500px;\n  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);\n  transition: opacity 0.3s ease, transform 0.3s ease;\n}\n\n/* Form Groups */\n.form-group {\n  display: flex;\n  flex-direction: column;\n  margin-bottom: 15px;\n}\n\nlabel {\n  font-weight: bold;\n  margin-bottom: 5px;\n}\n\ninput, select {\n  padding: 10px;\n  border-radius: 8px;\n  border: none;\n  font-size: 14px;\n  outline: none;\n  background: rgba(255, 255, 255, 0.8);\n}\n\ninput:focus, select:focus {\n  border: 2px solid #0070f3;\n}\n\n/* Buttons */\n.button-group {\n  display: flex;\n  justify-content: space-between;\n  gap: 10px;\n}\n\nbutton {\n  flex: 1;\n  padding: 10px;\n  border-radius: 8px;\n  border: none;\n  cursor: pointer;\n  transition: all 0.3s ease;\n}\n\n.add-button {\n  background: #0070f3;\n  color: white;\n}\n\n.add-button:hover {\n  background: #0056c1;\n}\n\n.save-button {\n  background: #28a745;\n  color: white;\n}\n\n.save-button:hover {\n  background: #218838;\n}\n</style>\n"],"mappings":"AA4CA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,KAAK;MAAE;MACjBC,QAAQ,EAAE;QACRC,KAAK,EAAE,EAAE;QACTC,GAAG,EAAE,EAAE;QACPC,IAAI,EAAE,EAAE;QACRC,QAAQ,EAAE;MACZ;IACF,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAI,CAACP,QAAO,GAAI,CAAC,IAAI,CAACA,QAAQ,EAAE;IAClC,CAAC;IACDQ,cAAcA,CAAA,EAAG;MACf,IAAI,CAACC,KAAK,CAAC,iBAAiB,EAAE,IAAI,CAACR,QAAQ,CAAC;MAC5C,IAAI,CAACS,SAAS,CAAC,CAAC;MAChB,IAAI,CAACV,QAAO,GAAI,KAAK,EAAE;I