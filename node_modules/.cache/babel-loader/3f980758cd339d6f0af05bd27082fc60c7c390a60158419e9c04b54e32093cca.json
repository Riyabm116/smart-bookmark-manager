 width: 100%;\n  max-width: 500px;\n  font-family: 'Arial', sans-serif;\n  transition: transform 0.3s ease-in-out;\n}\n\n.bookmark-form:hover {\n  transform: translateY(-10px);\n}\n\n/* Heading style */\n.form-heading {\n  text-align: center;\n  margin-bottom: 30px;\n  font-size: 1.8rem;\n  font-weight: 600;\n  color: #333;\n  letter-spacing: 1px;\n}\n\n/* Styling the form group */\n.form-group {\n  margin-bottom: 30px;\n  position: relative;\n}\n\n/* Input and select styling */\ninput, select {\n  width: 100%;\n  padding: 14px;\n  font-size: 16px;\n  border-radius: 10px;\n  border: 1px solid #ddd;\n  background-color: #f9f9f9;\n  transition: all 0.3s ease;\n  box-sizing: border-box;\n  outline: none;\n}\n\n/* Focus effect on input and select */\ninput:focus, select:focus {\n  border-color: #0070f3;\n  background-color: #fff;\n  box-shadow: 0 0 10px rgba(0, 112, 243, 0.2);\n}\n\n/* Placeholder text styling */\ninput::placeholder {\n  color: #aaa;\n}\n\n/* Button styles */\nbutton {\n  padding: 12px 25px;\n  font-size: 16px;\n  font-weight: bold;\n  border-radius: 10px;\n  border: none;\n  cursor: pointer;\n  transition: background-color 0.3s ease, transform 0.2s ease;\n}\n\nbutton:hover {\n  transform: translateY(-2px);\n}\n\n/* Next button */\n.next-button {\n  background-color: #0070f3;\n  color: white;\n  width: 100%;\n  border-radius: 10px;\n}\n\n.next-button:hover {\n  background-color: #0056c1;\n}\n\n/* Finish button */\n.finish-button {\n  background-color: #28a745;\n  color: white;\n  width: 100%;\n  border-radius: 10px;\n}\n\n.finish-button:hover {\n  background-color: #218838;\n}\n\n/* Smooth transition between form steps */\n.form-group {\n  display: flex;\n  flex-direction: column;\n  gap: 12px;\n}\n\n/* Responsive Design */\n@media (max-width: 600px) {\n  .bookmark-form {\n    padding: 20px;\n    max-width: 400px;\n  }\n\n  .form-heading {\n    font-size: 1.4rem;\n  }\n\n  input, select {\n    padding: 12px;\n    font-size: 14px;\n  }\n\n  button {\n    font-size: 14px;\n  }\n}\n</style>\n"],"mappings":"AA2DA,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE,CAAC;MAAE;MACTC,QAAQ,EAAE;QACRC,KAAK,EAAE,EAAE;QACTC,GAAG,EAAE,EAAE;QACPC,IAAI,EAAE,EAAE;QACRC,QAAQ,EAAE;MACZ;IACF,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP;IACAC,QAAQA,CAAA,EAAG;MACT,IAAI,IAAI,CAACP,IAAG,GAAI,CAAC,EAAE;QACjB,IAAI,CAACA,IAAG,IAAK,CAAC;MAChB;IACF,CAAC;IAED;IACAQ,cAAcA,CAAA,EAAG;MACf,IAAI,CAACC,KAAK,CAAC,iBAAiB,EAAE,IAAI,CAACR,QAAQ,CAAC;MAC5C,IAAI,CAACS,SAAS,CAAC,CAAC;IAClB,CAAC;IAED;IACAA,SAASA,CAAA,EAAG;MACV,IAAI,CAACT,QAAO,GAAI;QAAEC,KAAK,EAAE,EAAE;QAAEC,GAAG,EAAE,EAAE;QAAEC,IAAI,EAAE,EAAE;QAAEC,QAAQ,EAAE;MAAG,CAAC;MAC9D,IAAI,CAACL,IAAG,GAAI,CAAC,EAAE;IACjB;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}